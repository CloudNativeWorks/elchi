{
    "compilerOptions": {
        "noEmitOnError": false,
        "noImplicitAny": false,
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*",
            ],
            "@versions/*": [
                "src/elchi/versions/*"
            ],
            "@components/*": [
                "src/elchi/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@redux/*": [
                "src/redux/*"
            ],
            "@elchi/*": [
                "src/elchi/*"
            ],
            "@handlers/*": [
                "src/elchi/handlers/*"
            ],
            "@resources/*": [
                "src/elchi/components/resources/*"
            ]
        },
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "noStrictGenericChecks": false,
        "checkJs": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext", // "esnext" // "CommonJS" for readNewFields debugging
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node",
            "vite/client",
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/elchi/versions"
    ],
}